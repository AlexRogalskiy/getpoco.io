.sidebar
  box-shadow 24px 0 48px rgba(0,0,0,.1)
  background #fff
  height 100%
  left 0
  opacity 0
  padding 24px
  position fixed
  top 0
  transform translate(-100%,0)
  transition opacity .3s, transform .3s
  visibility hidden
  width 280px
  z-index 100

  @media $medium
    box-shadow none
    left auto
    opacity 1
    padding 0 48px 0 0
    position relative
    top auto
    transform translate(0,0)
    transition opacity .3s, transform .3s
    visibility visible
    width 280px

.sidebar.is-opened
  opacity 1
  transform translate(0,0)
  transition opacity .3s, transform .3s
  visibility visible

.sidebar__group
  padding 20px 0

.sidebar__group-title
  border-bottom solid 1px rgba(0,0,0,.1)
  margin 0 0 12px
  padding 0 6px 4px

.sidebar__list
  list-style none
  padding 0 6px

.sidebar__list-item
  padding 2px 0

.sidebar__link
  color #333
  text-decoration none

.sidebar__close
  appearance none
  background none
  border none
  cursor pointer
  height 24px
  position absolute
  right 12px
  top 12px
  width 24px

  @media $medium
    display none

.sidebar__close::before
  background-color #333
  content ''
  display block
  height 1px
  position absolute
  left 50%
  top 50%
  width 18px
  transform translate(-50%,-50%) rotate(45deg)

.sidebar__close::after
  background-color #333
  content ''
  display block
  height 1px
  position absolute
  left 50%
  top 50%
  width 18px
  transform translate(-50%,-50%) rotate(-45deg)
