.footer
  width 100%

.footer__container
  display flex
  flex-wrap wrap

.footer__content-top
  background-image linear-gradient(135deg, #4b86e0 0%, #32c1d8 100%)
  color: $white-color
  padding 24px 0

.footer__content-bottom
  padding 24px 0

.footer__row
  display flex
  justify-content space-between
  width 100%

.footer__content-bottom .footer__row
  flex-direction column
  justify-content flex-start

  @media $medium
    flex-direction row
    justify-content space-between

.footer__col
  @media $large
    margin 0 72px 0 0
    max-width 240px

.footer__title
  font-size 18px
  margin 0 0 6px

.footer__link
  color inherit

  &:hover
    text-decoration none

.footer__container-link
  color inherit
  display block
  padding 0 0 24px 36px
  position relative
  text-decoration none

  @media $large
    padding 0 0 0 36px

.footer__col:last-child .footer__container-link
  padding-bottom 0

.footer__container-icon
  left 0
  position absolute
  top 0
  width 36px
