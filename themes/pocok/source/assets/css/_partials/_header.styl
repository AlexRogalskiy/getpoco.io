.header
  box-shadow 0 0 48px rgba(0,0,0,.1)
  padding 12px 0
  position relative
  width 100%

  @media $medium
    padding 12px 24px

.header.header--home
  box-shadow none
  left 0
  position absolute
  top 0
  z-index 1

  @media $medium
    padding 24px 0

.header__grid
  align-items center
  display flex
  justify-content space-between

.header__col
  min-height 1px

.header__logo
  display block
  height 48px
  width 100px

  @media $medium
    width 96px

.header--home .header__logo
  height auto
  width 100px

  @media $medium
    width 144px

.header__logo svg
  height 100%
  width 100%

.header__logo-label
  @media (max-width: 639px)
    display none

.header__sidebar-toggle
  align-items center
  appearance none
  background none
  border none
  color inherit
  cursor pointer
  display flex

  @media $medium
    display none
