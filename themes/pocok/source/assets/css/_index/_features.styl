.features
  padding 90px 80px

.features__container
  display flex
  flex-wrap wrap
  justify-content center
  max-width 1320px
  margin 0 auto
  width 100%

.features__item
  padding 20px
  width 100%
  text-align center

  @media $medium
    padding 20px 80px
    width 50%

.features__item a
  color #333

.features__item-title
  color #5B85E7
  font-size 24px
  font-weight normal
  line-height 32px
  margin 0 0 12px

.features__item-logo
  margin 0 auto
  max-width 39px