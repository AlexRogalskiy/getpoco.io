.hero__buttons
  display flex
  margin 0

.button
  align-items center
  border-radius 24px
  display flex
  font-size 14px
  height 48px
  justify-content center
  line-height 48px
  margin 0 12px
  text-align center
  text-decoration none
  width 172px

.button--primary
  background-color rgba(255,255,255,.8)
  border solid 2px rgba(255, 255, 255, 0.1)
  color #333
  font-weight bold

.button--secondary
  border solid 2px #fff
  color #fff