.terminal
  background-color #323232
  border-radius 12px
  box-shadow 0 24px 48px rgba(0,0,0,.1)
  display flex
  height 168px
  margin 24px 0 0 0
  padding 24px 12px
  position relative
  width 100%

  @media $medium
    height 284px
    padding 32px 24px

  @media $large
    margin 0

.terminal__controls
  display flex
  left 12px
  position absolute
  top 12px

.terminal__control
  border-radius 100%
  height 8px
  margin 0 4px
  width 8px

.terminal__control--close
  background linear-gradient(-180deg, #FE8178 0%, #FC5A53 100%)

.terminal__control--hide
  background linear-gradient(-180deg, #FBCA67 0%, #F9B442 100%)

.terminal__control--full
  background linear-gradient(-180deg, #A4D577 0%, #81C351 100%)

.terminal-header
  align-items flex-end
  color #fff
  display flex
  overflow hidden
  padding 0
  position relative
  width 100%

.terminal__text
  color #9ccc65
  font-family 'Roboto Mono', monospace
  min-height 100%
  white-space pre
  font-size 12px

  @media $medium
    font-size 14px
