*
  box-sizing: border-box
  margin: 0
  outline: none
  padding: 0

*::before,
*::after
  box-sizing: inherit

*:active,
*:focus,
*:hover
  outline: none

html,
body
  min-height: 100%
  position: relative
  width: 100%

body
  background: #fff
  color: #333
  font-family: $body-font
  font-size: 14px
  font-weight: normal
  line-height: 1.6